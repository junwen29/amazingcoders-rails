<fieldset>
  <%= f.check_box :mon %>Mon
  <%= f.check_box :tue %>Tue
  <%= f.check_box :wed %>Wed
  <%= f.check_box :thur %>Thur
  <%= f.check_box :fri %>Fri
  <%= f.check_box :sat %>Sat
