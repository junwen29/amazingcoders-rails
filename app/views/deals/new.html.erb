<%= render 'layouts/biz/dash' %>

<div class="contentWrapper">
  <div class="content">
    <!-- Flash Error Message -->
    <% if @deal.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h5>
            <%= pluralize(@deal.errors.count, "error") %> prohibited
            this deal from being saved:
          </h5>
          <ul>
            <% @deal.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <!-- Content Heading -->
    <div class="pull-left">
      <p class="b2 content-title">List a deal</p>
      <h4>Get more customers excited about your place by simply listing a deal on your page. It's free!</h4>
    </div>

    <div class="clearfix"></div>
    <div class="content-separator"></div>

    <!-- Content Body -->
    <%= render :partial => 'form/deal_create_form' %>
    <%= link_to 'Back', deals_path, class: "btn btn-big btn-default" %>

  </div><!-- /content -->
</div><!-- /contentWrapper -->

<%= content_for :lean_overlay do %>
<% end %>

<%= content_for :body_footer do %>
<% end %>
